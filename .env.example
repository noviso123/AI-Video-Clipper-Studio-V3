# ===========================================
# AI Video Clipper - Configuração Local
# ===========================================

# CONFIGURAÇÕES DO WHISPER (Transcrição Local)
# Modelos disponíveis: tiny, base, small, medium, large
# Recomendado para PC médio: base (boa precisão, velocidade razoável)
# Recomendado para PC forte: small ou medium
WHISPER_MODEL=base
WHISPER_LANGUAGE=pt  # Português

# CONFIGURAÇÕES DE ANÁLISE VIRAL
# Usar Gemini local (gratuito) ou modelo offline
USE_LOCAL_AI=true

# OPCIONAL: Caso queira usar Gemini 1.5 Pro (online)
# Deixe em branco para usar apenas modelos locais
GEMINI_API_KEY=

# CONFIGURAÇÕES DE VÍDEO
CLIP_DURATION_MIN=30
CLIP_DURATION_MAX=60
VIDEO_FPS=30
VIDEO_QUALITY=high
OUTPUT_RESOLUTION=1080x1920  # Formato 9:16 para TikTok/Reels

# CONFIGURAÇÕES DE EDIÇÃO
FACE_TRACKING_ENABLED=true
DYNAMIC_CAPTIONS_ENABLED=true
BROLL_ENABLED=true

# CONFIGURAÇÕES DE ÁUDIO
AUDIO_EMOTION_DETECTION=true
VOLUME_THRESHOLD=0.7  # Sensibilidade para picos de emoção (0-1)

# CONFIGURAÇÕES DO AGENTE CRÍTICO
CRITIC_ENABLED=true
CRITIC_MIN_SCORE=8  # Mínimo para aprovar vídeo (0-10)
MAX_REFINEMENT_LOOPS=3  # Máximo de tentativas de refinamento

# DIRETÓRIOS
TEMP_DIR=temp
EXPORT_DIR=exports
ASSETS_DIR=src/assets

# DEBUG
DEBUG_MODE=false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
