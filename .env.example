# ===========================================
# AI Video Clipper V3 - Configurações
# Copie este arquivo para .env e preencha
# ===========================================

# === SERVIDOR ===
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# === TELEGRAM BOT (Opcional) ===
# Crie um bot com @BotFather no Telegram
TELEGRAM_BOT_TOKEN=SEU_TOKEN_AQUI
TELEGRAM_CHAT_ID=SEU_CHAT_ID_AQUI

# === GOOGLE DRIVE (Opcional) ===
# Para upload automático de clips
GOOGLE_DRIVE_FOLDER_ID=

# === PEXELS API (Opcional) ===
# Para vídeos de background
PEXELS_API_KEY=

# === NGROK (Opcional) ===
# Para acesso remoto
NGROK_AUTH_TOKEN=

# === CONFIGURAÇÕES DE PROCESSAMENTO ===
# Número máximo de clips por vídeo
MAX_CLIPS=5
# Duração mínima de clip (segundos)
MIN_CLIP_DURATION=30
# Duração máxima de clip (segundos)
MAX_CLIP_DURATION=120
# Idioma padrão para transcrição (pt = Português)
DEFAULT_LANGUAGE=pt

# === SSL/PROXY (Para redes corporativas) ===
# Desabilitar verificação SSL se estiver atrás de proxy
DISABLE_SSL_VERIFY=True
